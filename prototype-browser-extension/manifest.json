{
  "manifest_version": 2,
  "name": "GeoHeader Injector",
  "version": "1.0",
  "description": "Injects geolocation into HTTP headers for selected domains.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "geolocation",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "geoheader@example.com",
      "strict_min_version": "91.0"
    }
  }
}
