{
  "manifest_version": 2,
  "name": "GeoLocation Header Injector",
  "version": "1.0",
  "description": "Intercepts HTTPS requests for configured domains and adds a geolocation signature header.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "nativeMessaging",
    "geolocation",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Configure Domains"
  },
  "applications": {
    "gecko": {
      "id": "geosign@example.com"
    }
  }
}
